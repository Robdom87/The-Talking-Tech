{{#each posts as |post| }}
<div class="row align-center mb-5">
  <div class="col-md-6">
    <h2>{{post.title}}</h2>
    <span>Posted by {{post.user.username}} on {{post.updatedAt}}</span>
  </div>
  <div class="col-md-6">
    <p>{{post.content}}</p>
  </div>
  {{!-- attach a partial for comments --}}
</div>
{{/each}}