{{!-- create new options modal --}}
<div class="card hidden">
    <form class="card-body" data-type="add">
        <h3 class="card-title">Add or Update Post</h3>
        <div>
            <h5>Title:</h5>
            <input class='inputBox changeTitle' type="text">
        </div>
        <div>
            <p>Content:</p>
            <input class='inputBox changeContent' type="text">
        </div>
        <button type="button" class="cancelBtn">Cancel</button>
        <button type="submit" >Submit</button>
    </form>
</div>
<div class="addBtnSection">
    <button class="addBtn">Add Post</button>
</div>
<div class="postsSection">
    {{#each posts as |post| }}
    {{!-- //post box must encompass the hidden comments section --}}
    <div class="postBox">
        <div>
            <div class="titleStyle col-12">
                <h2 class='title' data-postid="{{post.id}}">{{post.title}}</h2>
                <span>Posted by {{post.user.username}} on {{format_date post.updatedAt}}</span>
            </div>
            <div class="contentStyle col-12">
                <p class='content' data-postid="{{post.id}}">{{post.content}}</p>
            </div>
        </div>


        {{!-- hidden options section --}}
        <div class="optionsbox hidden col-12">
            <button class='updateBtn' data-postid="{{post.id}}">Update</button>
            <button class='deleteBtn' data-postid="{{post.id}}">Delete</button>
        </div>

        {{#each post.comments as |comment|}}
        <div class='commentStyle col-12'>
            <p class="commentText">{{comment.comment}}</p>
            <p class="commentDate">{{comment.user.username}}<span>{{format_date comment.updatedAt}}</span></p>
        </div>
        {{/each}}
    </div>
    {{/each}}
</div>

{{#if logged_in}}
<script src="/js/dashboard.js"></script>
{{/if}}